<body>
    <h1>TABLA DE MULTIPLICAR</H1>
    
    <table border='1' align=center>
    <?php
        $num1=random_int(1,10);?>
        
        <tr>
            <th><?php echo "Tabla del ".$num1;?></th>
            <th><?php echo" ";?></th>
        </tr>
        
            <?php for($i=0;$i<$num1;$i++){
            echo '<tr>
                    <td>'.$num1."x".$i.'</td>
                    <td>'.$num1*$i.'</td>
                </tr>';
            }
            ?>
    </table> 
</body>
