    <?php
    
    function generarColor(){
        $rojo = 'rgb(255,17,0)';
        $verde='rgb(0,255,4)';
        $azul='rgb(0,26,255)';
        $blanco='rgb(255,255,255)';
        $negro='rgb(0,0,0)';
        $bgcolor="";
        $colores=[$rojo,$verde,$azul,$negro];
        
        $bgcolor = $colores[rand(0,$colores-1)];
        
    }
